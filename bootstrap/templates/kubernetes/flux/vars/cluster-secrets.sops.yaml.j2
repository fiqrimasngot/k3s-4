---
apiVersion: v1
kind: Secret
metadata:
  name: cluster-secrets
  namespace: flux-system
stringData:
  SECRET_DOMAIN: "{{ bootstrap_cloudflare_domain }}"
  SECRET_ACME_EMAIL: "{{ bootstrap_acme_email }}"
  SECRET_CLOUDFLARE_TUNNEL_ID: "{{ bootstrap_cloudflare_tunnel_id }}"
  AUTHELIA_STORAGE_POSTGRES_USERNAME: "{{ bootstrap_authelia_storage_postgres_username }}"
  AUTHELIA_STORAGE_POSTGRES_PASSWORD: "{{ bootstrap_authelia_storage_postgres_password }}"
  POSTGRES_SUPER_PASS: "{{ bootstrap_postgres_super_pass }}"
  SECRET_LDAP_ROOT: "{{ bootstrap_secret_ldap_root }}"
  LLDAP_USER_DN: "{{ bootstrap_lldap_user_dn }}"
  LLDAP_LDAP_USER_PASS: "{{ bootstrap_lldap_ldap_user_pass }}"
  SMTP_RELAY_PORT: "{{ bootstrap_smtp_relay_port }}"
  AUTHELIA_IDENTITY_PROVIDERS_OIDC_HMAC_SECRET: "{{ bootstrap_authelia_identity_providers_oidc_hmac_secret }}"
  AUTHELIA_JWT_SECRET: "{{ bootstrap_authelia_jwt_secret }}"
  AUTHELIA_SESSION_SECRET: "{{ bootstrap_authelia_session_secret }}"
  AUTHELIA_STORAGE_ENCRYPTION_KEY: "{{ bootstrap_authelia_storage_encryption_key }}"
  AUTHELIA_STORAGE_POSTGRES_USERNAME: "{{ bootstrap_authelia_storage_postgres_username }}"
  AUTHELIA_STORAGE_POSTGRES_PASSWORD: "{{ bootstrap_authelia_storage_postgres_password }}"
  GRAFANA_OAUTH_CLIENT_SECRET: "{{ bootstrap_grafana_oauth_client_secret }}"
  LLDAP_POSTGRES_USER: "{{ bootstrap_lldap_user_dn }}"
  LLDAP_POSTGRES_PASS: "{{ bootstrap_lldap_ldap_user_pass }}"
  LLDAP_JWT_SECRET: "{{ bootstrap_authelia_jwt_secret }}"
  LLDAP_LDAP_USER_EMAIL: "{{ bootstrap_acme_email }}"
  LLDAP_SERVER_KEY_SEED: "{{ bootstrap_authelia_jwt_secret }}"
  {% if bootstrap_nas_enabled | default(false) %}
  SECRET_BACKUP_SERVER: "{{ bootstrap_backup_server }}"
  {% endif %}