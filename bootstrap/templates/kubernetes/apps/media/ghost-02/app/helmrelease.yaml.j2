---
apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: ghost-02
  namespace: media
spec:
  dependsOn:
    - name: ghost-mariadb-02
  chart:
    spec:
      # renovate: registryUrl=https://k8s-at-home.com/charts/
      chart: ghost
      version: 2.1.2
      sourceRef:
        kind: HelmRepository
        name: k8s-at-home-charts
        namespace: flux-system
      interval: 5m
  interval: 15m
  maxHistory: 2
  timeout: 20m
  install:
    remediation:
      retries: 300
  upgrade:
    remediation:
      retries: 300
  values:
    image:
      repository: ghost
      tag: 5.38@sha256:0ba58c36c53813933023cca728a026f1f9f1b129364350021fdf6703ae148829
    env:
      TZ: "${TIMEZONE}"
      url: "https://${SECRET_DOMAIN2}"
      database__client: mysql
      database__connection__host: ghost-mariadb-02.media.svc.cluster.local
      database__connection__user: ${SECRET_GHOST_MARIADB_USER}
      database__connection__password: ${SECRET_GHOST_MARIADB_PASS}
      database__connection__database: ${SECRET_GHOST_MARIADB_DB}
    ingress:
      main:
        enabled: true
        ingressClassName: external
        annotations:
          # cert-manager.io/cluster-issuer: "letsencrypt-production"
          hajimari.io/enable: "true"
          hajimari.io/icon: "post"
          # external-dns/is-public: "true"
          external-dns.alpha.kubernetes.io/target: "external.${SECRET_DOMAIN}"
        hosts:
          - host: &host "${SECRET_DOMAIN2}"
            paths:
              - path: /
                pathType: Prefix
        tls:
          - hosts:
              - *host
    persistence:
      content:
        enabled: true
        existingClaim: ghost-v2
    mariadb:
      enabled: false
---
apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: ghost-mariadb-02
  namespace: media
spec:
  interval: 15m
  chart:
    spec:
      chart: mariadb
      version: 14.1.0
      sourceRef:
        kind: HelmRepository
        name: bitnami-charts
        namespace: flux-system
      interval: 15m
  values:
    auth:
      # database__connection__host: ghost-mariadb
      rootPassword: ${MEDIA_GHOST_DB_ROOT_PASSWORD}
      username: ${SECRET_GHOST_MARIADB_USER}
      password: ${SECRET_GHOST_MARIADB_PASS}
      database: ${SECRET_GHOST_MARIADB_DB}
    persistence:
      existingClaim: ghost-db-pvc-v2
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: ghost-v2
  namespace: media
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: longhorn      
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: ghost-db-pvc-v2
  namespace: media
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: longhorn
  resources:
    requests:
      storage: 2Gi  