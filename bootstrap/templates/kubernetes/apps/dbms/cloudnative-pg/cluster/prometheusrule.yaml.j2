---
apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  name: cloudnative-pg-rules
  namespace: dbms
  labels:
    prometheus: k8s
    role: alert-rules
spec:
  groups:
    - name: cloudnative-pg.rules
      rules:
        - alert: LongRunningTransaction
          annotations:
            description: Pod {% raw %}{{ $labels.pod }}{% endraw %} is taking more than 5 minutes (300 seconds) for a query.
            summary: A query is taking longer than 5 minutes.
          expr: |-
            cnpg_backends_max_tx_duration_seconds > 300
          for: 1m
          labels:
            severity: warning
        - alert: BackendsWaiting
          annotations:
            description: Pod {% raw %}{{ $labels.pod }}{% endraw %} has been waiting for longer than 5 minutes
            summary: If a backend is waiting for longer than 5 minutes
          expr: |-
            cnpg_backends_waiting_total > 300
          for: 1m
          labels:
            severity: warning
        - alert: PGDatabase
          annotations:
            description: Over 150,000,000 transactions from frozen xid on pod {% raw %}{{ $labels.pod }}{% endraw %}
            summary: Number of transactions from the frozen XID to the current one
          expr: |-
            cnpg_pg_database_xid_age > 150000000
          for: 1m
          labels:
            severity: warning
        - alert: PGReplication
          annotations:
            description: Standby is lagging behind by over 300 seconds (5 minutes)
            summary: The standby is lagging behind the primary
          expr: |-
            cnpg_pg_replication_lag > 300
          for: 1m
          labels:
            severity: warning
        - alert: LastFailedArchiveTime
          annotations:
            description: Archiving failed for {% raw %}{{ $labels.pod }}{% endraw %}
            summary: Checks the last time archiving failed. Will be -1 when it has not failed.
          expr: |-
            cnpg_pg_stat_archiver_last_failed_time > cnpg_pg_stat_archiver_last_archived_time
          for: 1m
          labels:
            severity: warning
        - alert: DatabaseDeadlockConflicts
          annotations:
            description: There are over 10 deadlock conflicts in {% raw %}{{ $labels.pod }}{% endraw %}
            summary: Checks the number of database conflicts
          expr: |-
            cnpg_pg_stat_database_deadlocks > 10
          for: 1m
          labels:
            severity: warning
        - alert: PGNoRecentBackups
          annotations:
            summmary: Checks for a recent backup
            description: Job {% raw %}{{ $labels.job }}{% endraw %} has not completed in {% raw %}{{ humanizeDuration $value }}{% endraw %}.
          # 36h
          expr: |-
            time() - max without (instance,pod) (cnpg_collector_last_available_backup_timestamp) > 129600
          labels:
            severity: warning
